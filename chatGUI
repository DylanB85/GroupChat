import org.eclipse.swt.widgets.Composite;
import org.eclipse.swt.custom.ScrolledComposite;
import org.eclipse.swt.SWT;
import org.eclipse.swt.widgets.Button;
import org.eclipse.swt.widgets.Text;
import org.eclipse.swt.widgets.Label;

public class gui extends Composite {
	private Text text;

	/**
	 * Create the composite.
	 * @param parent
	 * @param style
	 */
	public gui(Composite parent, int style) {
		super(parent, style);
		
		ScrolledComposite scrolledComposite = new ScrolledComposite(this, SWT.BORDER | SWT.H_SCROLL | SWT.V_SCROLL);
		scrolledComposite.setBounds(65, 88, 321, 148);
		scrolledComposite.setExpandHorizontal(true);
		scrolledComposite.setExpandVertical(true);
		
		Button btnSend = new Button(this, SWT.NONE);
		btnSend.setBounds(311, 240, 75, 25);
		btnSend.setText("Send");
		
		text = new Text(this, SWT.BORDER);
		text.setBounds(65, 242, 205, 21);
		
		Label lblUsername = new Label(this, SWT.NONE);
		lblUsername.setBounds(65, 24, 55, 15);
		lblUsername.setText("username");

	}

	@Override
	protected void checkSubclass() {
		// Disable the check that prevents subclassing of SWT components
	}
